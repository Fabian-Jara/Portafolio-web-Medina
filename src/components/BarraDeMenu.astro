---
import Isotipo from "./Iconos/Isotipo.astro";

const navItems = [
  {
    title: "Inicio",
    label: "inicio",
    url: "/#inicio",
  },
  {
    title: "Nosotros",
    label: "nosotros",
    url: "/#nosotros",
  },
  {
    title: "Servicios",
    label: "servicios",
    url: "/#servicios",
  },
  {
    title: "Proyectos",
    label: "proyectos",
    url: "/#proyectos",
  },
];
---

<nav class="fixed w-full z-30 top-0 start-0">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="/#top" class="flex justify-start items-center text-white">
      <Isotipo class="sm:h-24 h-14 sm:px-0 px-2" />
      <h1 class="flex text-center flex-col tracking-widest sm:pr-0 pr-2 pl-4">
        <span class="sm:text-2xl sm:block hidden font-bold">Servicios de</span>
        <span class="sm:text-xs font-bold sm:block hidden"
          >Telecomunicaciones</span
        >
        <span class="sm:text-xs sm:block hidden font-bold">Chile SPA.</span>
      </h1>

      <h1 class="text-center sm:text-xs text-xl sm:hidden block">S.D.T.C.</h1>
    </a>

    <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
      <a
        href="mailto:cctv.medina@gmail.com"
        class="text-white bg-red-600 hover:bg-red-500 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg sm:text-sm text-xs sm:px-4 px-3 py-2.5 text-center"
      >
        Contáctenos
      </a>

      <button
        data-collapse-toggle="navbar-sticky"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-200 rounded-lg md:hidden bg-gray-700 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-200 focus:bg-gray-700"
        aria-controls="navbar-sticky"
        aria-expanded="false"
      >
        <span class="sr-only">Abrir Menú Principal</span>
        <svg aria-hidden="true" fill="none" viewBox="0 0 17 14">
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>

    <div
      id="navbar-sticky"
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
    >
      <ul
        class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg bg-gray-700/90 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 sm:bg-transparent"
      >
        {
          navItems.map((link) => (
            <li>
              <a
                aria-label={link.label}
                href={link.url}
                class="block text-white drop-shadow-lg py-2 px-3 rounded hover:bg-red-400 md:hover:bg-transparent md:hover:text-red-500 md:p-0 sm:text-[13pt] text-sm"
              >
                {link.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>

<style>
  nav {
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  a {
    animation: nav-text 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
    text-shadow:
      1px 1px 1px black,
      0 0 1em gray,
      0 0 0.2em black;
  }

  .text-filter-none {
    text-shadow: none;
  }

  @keyframes nav-shadown {
    to {
      @apply shadow-xl ring-1 backdrop-blur-sm bg-gray-700/90 ring-white/10;
    }
  }
</style>
